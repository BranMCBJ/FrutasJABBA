@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var nombrePagina = currentController switch
    {
        "Home" => "Panel de control",
        "Pedidos" => "Pedidos",
        "Fruta" => "Frutas",
        "Inventario" => "Inventario",
        "Clientes" => "Clientes",
        _ => currentController
    };
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Frutas JABBA</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="assets/css/Navbar-With-Button-icons.css" />    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    @*OffCanvas (SideBar)*@
    <div class="offcanvas offcanvas-start bg-body" tabindex="-1" data-bs-backdrop="false" id="offcanvas-menu" style="width: auto;">
        <div class="offcanvas-header d-flex align-items-center">
            <a class="link-body-emphasis d-flex align-items-center me-md-auto mb-3 mb-md-0 text-decoration-none" asp-controller="Home" asp-action="Index">
                <img src="~/img/Screenshot 2025-05-31 125228.png" alt="Logo" width="50" height="50" class="mw-100" />
                <div class="ms-2">
                    <p class="mb-1 fs-3" style="margin-top: -4px;"><strong>Frutas JABBA</strong></p>
                    <p class="mb-0" style="margin-top: -8px;">Slogan</p>
                </div>
            </a>
            <button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body d-flex flex-column justify-content-between pt-0 fs-5">
            <div>
                <hr class="mt-0" />
                <span style="border-style: none; border-color: #ffffff; color: #8ecd89;">Menu principal</span>
                <ul class="nav nav-pills flex-column mb-auto">
                    <li class="nav-item"><a class="nav-link link-body-emphasis text-black" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door me-2"></i> Panel de control </a></li>
                    <li class="nav-item"><a class="nav-link link-body-emphasis text-black" href="#"><i class="bi bi-cart3 me-2"></i> Pedidos </a></li>
                    <li class="nav-item"><a class="nav-link link-body-emphasis text-black" asp-controller="Fruta" asp-action="Index"><img src="~/img/watermelon.png" width="20px" height="20px"/> Frutas </a></li>
                    <li class="nav-item"><a class="nav-link link-body-emphasis text-black" href="#"><i class="fa fa-line-chart me-2"></i> Inventario </a></li>
                    <li class="nav-item"><a class="nav-link link-body-emphasis text-black" href="#"><i class="bi bi-people me-2"></i> Clientes </a></li>
                </ul>
            </div>
            <div>
                <hr />
                <p class="text-center small">© 2025 Frutas JABBA<br />Version 1.0</p>
            </div>
        </div>
    </div>
    
    @*Header*@
    <header class="d-flex flex-column flex-sm-row align-items-center justify-content-between w-100 py-3 border-bottom border-2 border-opacity-25"
            style="height: auto; color: black;">
        <div class="container d-flex justify-content-between align-items-center" style="width: 100%; max-width: 100%;">
            <div class="d-flex align-items-center">
                <button class="btn btn-primary bg-white border-0 d-flex justify-content-center align-items-center me-3"
                        type="button" style="width: 46px; height: 46px;" data-bs-target="#offcanvas-menu" data-bs-toggle="offcanvas">
                    <i class="bi bi-layout-sidebar fs-4" style="color: black;"></i>
                </button>
                <h1 class="fs-4 text-black m-0">@nombrePagina</h1>
            </div>
            <div class="d-flex align-items-center justify-content-start mt-2 mt-sm-0">
                <button class="btn btn-primary bg-white border-0 d-flex justify-content-center align-items-center ms-3"
                        type="button" style="width: 46px; height: 46px;" data-bs-target="#offcanvas-menu" data-bs-toggle="offcanvas">
                    <i class="bi bi-bell fs-4" style="color: black;"></i>
                </button>
                <button class="btn btn-primary bg-white border-0 d-flex justify-content-center align-items-center ms-3"
                        type="button" style="width: 46px; height: 46px;" data-bs-target="#offcanvas-menu" data-bs-toggle="offcanvas">
                    <i class="bi bi-person fs-4" style="color: black;"></i>
                </button>
            </div>
        </div>
    </header>
    <div class="container" style="width: 100%; max-width: 100%; padding-top: 20px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-center">
            &copy; 2025 - Frutas JABBA - Todos los derechos reservados
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
